# openai api key (required)
OPENAI_API_KEY=your_api_key_here

# server configuration
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# data source: "api" for json or "db" for sqlite
MEDICATION_DATA_SOURCE=api

# openai model configuration (optional overrides)
# OPENAI_MODEL=gpt-4-turbo-preview
# OPENAI_TEMPERATURE=0.7
# OPENAI_TIMEOUT=5.0

# external service urls (optional overrides)
# INVENTORY_SERVICE_URL=http://127.0.0.1:8001
# MEDICATION_SERVICE_URL=http://127.0.0.1:8002
